@model CUExam

@{
    ViewData["Title"] = "Cập nhật Bài học";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <form asp-action="Edit">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a asp-controller="Exams" asp-action="Index" class="breadcrumb-item">Danh sách bài học</a>
                        <span class="breadcrumb-item active">Cập nhật</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class=" col-md-6">
                        </div>
                        <div class=" col-md-6 text-right">
                            <a class=" btn btn-success fas fa-undo-alt" asp-action="Index"></a>
                            <button class="btn btn-primary" type="submit"><i class="fas fas fa-save mr-1"></i>Xác nhận</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Code">Mã đề thi <span class="text-danger">*</span></label>
                            <input asp-for="Code" class="form-control" required />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ExamName">Tên Đề thi <span class="text-danger">*</span></label>
                            <input asp-for="ExamName" class="form-control" is-valid required />
                            <span asp-validation-for="ExamName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Duration">Thời gian(phút) <span class="text-danger">*</span></label>
                            <input asp-for="Duration" class="form-control" is-valid required />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="TotalQuestions">Tổng số câu hỏi <span class="text-danger">*</span></label>
                            <input asp-for="TotalQuestions" class="form-control" is-valid required />
                            <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SubjectId">Môn học <span class="text-danger">*</span></label>
                            <select asp-for="SubjectId" class="form-control select-subject" asp-items="ViewBag.Subjects" required>
                                <option selected disabled>--Chọn môn học--</option>
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LessonId">Bài học <span class="text-danger">*</span></label>
                            <select asp-for="LessonId" class="form-control select-lesson" asp-items="ViewBag.Lessons" required>
                                <option selected disabled>--Chọn bài học--</option>
                            </select>
                            <span asp-validation-for="LessonId" class="text-danger"></span>
                        </div>

                    </div>

                </div>
                <!-- /.card-body -->
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}