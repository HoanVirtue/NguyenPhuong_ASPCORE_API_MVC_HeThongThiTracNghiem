@using MultipleChoiceTest.Domain.ModelViews
@model List<ExamResultItem>
@{
    ViewData["Title"] = "Lịch sử thi";
}
<ol class="breadcrumb" itemscope="" itemtype="https://schema.org/BreadcrumbList">
    <li class="home" itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
        <em class="fa fa-lg fa-home">&nbsp;</em><a href="/vi/" itemprop="item" title="Trang nhất">
            <span itemprop="name">Trang nhất</span>
        </a><i class="hidden" itemprop="position" content="1"></i>
    </li>
    <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
        <a href="/vi/users/" itemprop="item" title="Lịch sử thi">
            <span itemprop="name">Lịch sử thi</span>
        </a><i class="hidden" itemprop="position" content="2"></i>
    </li>
</ol>
<div class="row">
    <div class="col-md-9">
        <div class="col-sm-18 col-md-18">
            <div class="panel panel-primary-two">
                <div class="panel-heading">
                    <div class="panel-heading-left clearfix">
                        <div class="icon-menu-left fl">&nbsp;</div>
                        <div class="icon-menu-right fr">&nbsp;</div>
                        <div class="title-block">
                            <span>LƯU Ý VỀ CHỨC NĂNG "LƯU LỊCH SỬ BÀI LÀM"</span>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <h2><strong><span style="font-size:14px;">Hiện nay lịch sử thi ghi nhận rất lớn, để tránh trường hợp hệ thống bị quá tải thì Admin đã cập nhật một số quy định sau:&nbsp;</span></strong></h2><span style="font-size:14px;">1. Hệ thống chỉ lưu lịch sử bài làm với các đề thi dạng <strong><span style="color:rgb(192, 57, 43);">THI THỬ</span></strong>, không lưu các bài thi dạng <strong><span style="color:rgb(192, 57, 43);">LUYỆN THI</span></strong>.<br>2. Tất cả các lịch sử thi có thời hạn <strong><span style="color:rgb(192, 57, 43);">1 THÁNG</span></strong>&nbsp;về trước sẽ được xoá khỏi hệ thống.<br>3. Trường hợp <strong><span style="color:rgb(192, 57, 43);">CHUNG 1 ĐỀ</span></strong> thi thử, chỉ lưu bài được nộp<span style="color:rgb(192, 57, 43);">&nbsp;</span><strong><span style="color:rgb(192, 57, 43);">GẦN NHẤT</span></strong>.</span><br>&nbsp;
                </div>
            </div>

            <div class="content">
                <div class="content-heading row">
                    <h1 class="m-bottom">Lịch sử thi</h1>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-middle">
                            <colgroup>
                                <col width="50">
                                <col width="150">
                                <col width="150">
                                <col width="80">
                                <col width="110">
                                <col width="60">
                                <col width="60">
                                <col width="90">
                                <col>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Đề thi</th>
                                    <th class="text-center">Ngày làm bài</th>
                                    <th class="text-center">Điểm</th>
                                    <th class="text-center">Xếp loại trắc nghiệm</th>
                                    <th class="text-center">Đúng</th>
                                    <th class="text-center">Sai</th>
                                    <th class="text-center">Không TL</th>
                                </tr>
                            </thead>
                            <tbody id=" records_table">
                                @if(Model!= null && Model.Count > 0 )
                                {
                                    foreach(var item in Model)
                                    {
                                        <tr>
                                            <td scope="row" class="text-center">@item.Id</td>
                                            <td scope="row" class="text-center">@item.ExamName</td>
                                            <td scope="row" class="text-center">@item.CompletionTime</td>
                                            <td scope="row" class="text-center">@item.Score</td>
                                            <td scope="row" class="text-center">@item.Rank</td>
                                            <td scope="row" class="text-center">@item.CorrectAnswersCount</td>
                                            <td scope="row" class="text-center">@item.IncorrectAnswersCount</td>
                                            <td scope="row" class="text-center">@item.UnansweredQuestionsCount</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        @await Component.InvokeAsync("UserInfo")
        
        @await Component.InvokeAsync("RightPage", new {type = "access"})
    </div>
</div>