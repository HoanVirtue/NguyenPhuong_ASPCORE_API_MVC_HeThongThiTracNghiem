@using MultipleChoiceTest.Domain.ModelViews
@model ExamItem


<ol class="breadcrumb" itemscope="" itemtype="https://schema.org/BreadcrumbList">
    <li class="home"><em class="fa fa-lg fa-home">&nbsp;</em><a href="/Home/Index" title="Trang chủ"><span itemprop="name">Trang nhất</span></a><i class="hidden" itemprop="position" content="1"></i></li>
    <li><a href="/Exams/InfoExamBySubject?subjectId=@Model?.SubjectId" itemprop="item" title="@Model?.SubjectName"><span itemprop="name">@Model?.SubjectName</span></a><i class="hidden" itemprop="position" content="3"></i></li>
    <li><a href="/Exams/InfoExamByLesson?lessonId=@Model?.LessonId" itemprop="item" title="@Model?.LessonName"><span itemprop="name">@Model?.LessonName</span></a><i class="hidden" itemprop="position" content="4"></i></li>
    <li><a href="#" itemprop="item" title="@Model.ExamName"><span itemprop="name">@Model.ExamName</span></a><i class="hidden" itemprop="position" content="5"></i></li>
</ol>

<div class="row">
    <div class="col-md-9">
        <div class="content">
            <div class="content-heading row">
                <div class="modal fade modal-fullscreen" id="submit-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xs" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Thông báo!</h3>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div style="padding:20px 10px; border: 1px solid #9d9797; border-radius: 4px">
                                    <p id="test-submit-confirm-msg"></p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button id="submit-button" type="button" class="btn btn-primary">
                                    Đồng ý
                                </button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bỏ qua</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade modal-fullscreen " id="nv-test-exit" tabindex="-1" role="dialog"
                     aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-xs" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                                <h3 class="modal-title">Thông báo!</h3>
                            </div>
                            <div class="modal-body">
                                <div style="padding:20px 10px; border: 1px solid #9d9797; border-radius: 4px">
                                    <p>
                                        Hành động này sẽ xóa tất cả các đáp án bạn đã chọn. Bạn có chắc chắn
                                        muốn thoát khỏi đề thi?
                                    </p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-success" href="javascript:void(0)">
                                    Đồng ý
                                </a>
                                <button type="button" class="btn btn-warning" data-dismiss="modal">
                                    Bỏ
                                    qua
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="quiz-game-info-guest" role="dialog">
                    <form action="#" method="post">
                        <div class="modal-dialog modal-xs" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"
                                            aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    <h3 class="modal-title">Nhập thông tin</h3>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="ho_va_ten"
                                               placeholder="Họ và tên">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="dien_thoai"
                                               placeholder=" Điện thoại">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success">Đồng ý</button>
                                    <button type="buttom" class="btn btn-warning" data-dismiss="modal">
                                        Bỏ
                                        qua
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="breadcrumbs_mobile" class="col-xs-24 col-sm-24 box-coll hidden-lg hidden-md">
                    <div class="col-xs-20 col-sm-20 title"></div>
                </div>
                <div class="row detail test-gird">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4 sticky-exams">
                                <div id="timer-box" class="template2">
                                    <span>Thời gian còn lại</span>
                                    <div id="countdown" data-minute="@Model.Duration">
                                        <div class="jst-hours">00:</div>
                                        <div class="jst-minutes">00:</div>
                                        <div class="jst-seconds">00</div>
                                        <div class="jst-clearDiv"></div>
                                    </div>
                                </div>
                                <div class="template2">
                                    <h1>@Model.ExamName</h1>
                                    <ul class="exam-info">
                                        <li><label>Số câu</label>: @Model.TotalQuestions</li>
                                        <li><label>Thời gian</label>: @Model.Duration phút</li>
                                        <li><label>Họ và tên</label>: @ViewData["Username"]</li>
                                    </ul>
                                </div>
                                <div class="template2">
                                    <button type="button" name="submit" class="btn btn-success">
                                        <i class="fa-solid fa-floppy-disk"></i> &nbsp;Nộp bài
                                    </button>
                                    &nbsp; <a href="" class="cancelLink">Thoát </a>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="testing test-gird m-bottom">
                                    <form action="" method="post" id="frm-submit">
                                        <input type="hidden" value="@Model.Id" name="exam_id">
                                        <div id="questionlist" data-exam-id="83" class="m-bottom" style="font-size: 16px;">
                                            @foreach(var ques in ViewData["Questions"] as List<QuestionItem>)
                                            {
                                                @await Html.PartialAsync("~/Views/Shared/QuestionView/_QuestionMultipleChoice.cshtml", ques)
                                            }

                                            <div class="form-check">
                                                <input type="checkbox" id="auto_next_question">
                                                <label for="auto_next_question">Tự động chuyển câu khi chọn xong đáp án</label>
                                            </div>
                                            <div class="text-center clear">
                                                <button type="button"
                                                        class="btn btn-danger item-prev" title="Trước đó"
                                                        style="display:none">
                                                    <span>Trước đó</span>
                                                </button>
                                                &nbsp;
                                                <button type="button"
                                                        class="btn btn-primary item-next" title="Kế tiếp">
                                                    <span class="btn-label">Kế tiếp</span>
                                                </button>
                                            </div>
                                        </div>
                                    </form>

                                    <div class="col-md-12">
                                        <ul class="slides-vertical-pagination">
                                            @for(int i = 1; i <= Model.TotalQuestions; i++)
                                            {
                                                <li class="question_number" id="question_number_@i">
                                                    <span class="pagination-item-name" aria-hidden="true" data-value="@i">Câu&nbsp;@i</span>
                                                </li>
                                            }
                                            @* <li class="question_number pagination-active"
                                                id="question_number_1">
                                                <span class="pagination-item-name"
                                                      aria-hidden="true">Câu&nbsp;1</span>
                                            </li>
                                            <li class="question_number" id="question_number_2">
                                                <span class="pagination-item-name"
                                                      aria-hidden="true">Câu&nbsp;2</span>
                                            </li>
                                            <li class="question_number" id="question_number_3">
                                                <span class="pagination-item-name"
                                                      aria-hidden="true">Câu&nbsp;3</span>
                                            </li> *@
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        @await Component.InvokeAsync("UserInfo")

        @await Component.InvokeAsync("RightPage", new {type = "access"})
    </div>
</div>


@section Scripts {
    <script src="~/js/user/quiz_question.js"></script>
    <script src="~/js/user/quiz_test.js"></script>
}