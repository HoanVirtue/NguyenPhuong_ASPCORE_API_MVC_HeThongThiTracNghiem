@model NavbarModelView

<nav>
    <div class="container">
        <div class="">
            <div class="menu_header">
                <div class="menu_background">
                    <div id="search" class="headerSearch">
                        <div class="input-group search_header">
                            <input type="text" class="form-control" maxlength="60" placeholder="Tìm kiếm...">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-info">
                                    <img src="/assets/images/icon_search.png">
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="navbar navbar-default navbar-static-top">
                        <div class="collapse navbar-collapse" id="menu-site-default">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="/Home/index" title="Trang nhất"><span>TRANG CHỦ</span></a>
                                </li>
                                <li class="dropdown" rol="presentation">
                                    <a class="dropdown-toggle" role="button" aria-expanded="false"
                                       title="LUYỆN THI">
                                        <span>LUYỆN THI</span> <strong class="caret">&nbsp;</strong>
                                    </a>
                                    <ul class="submenu clearfix dropdown-menu">
                                        @if(Model.Subjects != null && Model.Subjects.Count > 0)
                                        {
                                            foreach(var s in Model.Subjects)
                                            {
                                                var lessons = Model.Lessons.Where(x => x.SubjectId == s.Id).ToList();
                                                <li class="dropdown-submenu">
                                                    <a href="#" title="@s.SubjectName" class="clearfix">@s.SubjectName</a>
                                                    @if (lessons != null && lessons.Count > 0)
                                                    {
                                                        <ul class="submenu clearfix dropdown-menu">
                                                            @foreach(var les in lessons)
                                                            {
                                                                <li>
                                                                    <a href="/Exams/InfoExam" title="@les.LessonName"
                                                                       class="">@les.LessonName</a>
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                                <li rol="presentation">
                                    <a href="" role="button" aria-expanded="false" title="LỊCH SỬ THI">
                                        <span>
                                            LỊCH SỬ
                                            THI
                                        </span>
                                    </a>
                                </li>
                                <li rol="presentation">
                                    <a href="/Contact/Contact" role="button" aria-expanded="false" title="LIÊN HỆ"><span>LIÊN HỆ</span></a>
                                </li>
                            </ul>
                            <div class="dropdown dropdown-animated scale-left">
                                <div class="pointer" data-toggle="dropdown">
                                    <div class="avatar avatar-image  m-h-10 m-r-15">
                                        <img src="~/Adminassets/images/logo/user.png" alt="">
                                    </div>
                                </div>
                                <div class="p-b-15 p-t-20 dropdown-menu pop-profile">
                                    <div class="p-h-20 p-b-15 m-b-10 border-bottom @(ViewData["Username"] == null ? "d-none" : "")">
                                        <div class="d-flex m-r-50">
                                            <div class="avatar avatar-lg avatar-image">
                                                <img src="~/Adminassets/images/logo/user.png" alt="">
                                            </div>
                                            <div class="m-l-10">
                                                <p class="m-b-0 text-dark font-weight-semibold">@ViewData["Username"]</p>
                                                <p class="m-b-0 opacity-07">
                                                    Người dùng
                                                </p>


                                            </div>
                                        </div>
                                    </div>
                                    @if(ViewData["Username"] == null)
                                    {
                                        <a asp-controller="Auth" asp-action="Login" class="dropdown-item d-block p-h-15 p-v-10">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <i class="anticon opacity-04 font-size-16 anticon-logout"></i>
                                                    <span class="m-l-10">Đăng nhập</span>
                                                </div>
                                                <i class="anticon font-size-10 anticon-right"></i>
                                            </div>
                                        </a>
                                        <a asp-controller="Auth" asp-action="Register" class="dropdown-item d-block p-h-15 p-v-10">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <i class="anticon opacity-04 font-size-16 anticon-logout"></i>
                                                    <span class="m-l-10">Đăng ký</span>
                                                </div>
                                                <i class="anticon font-size-10 anticon-right"></i>
                                            </div>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="profile" asp-controller="Account" class="dropdown-item d-block p-h-15 p-v-10">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <i class="anticon opacity-04 font-size-16 anticon-user"></i>
                                                    <span class="m-l-10">Thông tin tài khoản</span>
                                                </div>
                                                <i class="anticon font-size-10 anticon-right"></i>
                                            </div>
                                        </a>
                                        <a asp-controller="Auth" asp-action="Logout" class="dropdown-item d-block p-h-15 p-v-10">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <i class="anticon opacity-04 font-size-16 anticon-logout"></i>
                                                    <span class="m-l-10">Đăng xuất</span>
                                                </div>
                                                <i class="anticon font-size-10 anticon-right"></i>
                                            </div>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</nav>